<div class="container">
<h1><strong>All Our Flats</strong></h1>
</div>
<div class="container mt-3">
  <div class="row">
  <% @flats.each do |flat| %>
  <div class="col-6 col-md-4 col-lg-3 mt-3">
    <div class="card">
      <img class="card-img-top" src="https://images.unsplash.com/photo-1494526585095-c41746248156?w=1200" alt="Flat image">
      <div class="card-body bg-light">
        <h5 class="card-title"> <strong><%= flat.name %></h5></strong>
        <p class="card-text"> <%=flat.address %>
        <div class="m-3">
          <i class="fas fa-user-friends"></i> <span><%= flat.number_of_guests%></span>
          <i class="fas fa-euro-sign"></i> <span><%= flat.price_per_night %></span>
        </div>
      </div>
        <div class="m-3">
          <%= link_to "More Info", flat_path(flat)%>
          <%= link_to "Edit", edit_flat_path(flat), class:"text-warning"%>
          <%= link_to "Remove", flat_path(flat), method: :delete, data: { confirm: "Are you sure?" }, class:"text-danger"%>
        </div>
    </div>
  </div>
  <% end %>
  </div>
</div>



